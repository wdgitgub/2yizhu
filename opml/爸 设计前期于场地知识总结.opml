          <outline text="人均居住用地面积	  28.0~38.0	                             23.0~36.0" _mubu_text="%3Cspan%20class=%22%20text-color-blue%22%3E%E4%BA%BA%E5%9D%87%E5%B1%85%E4%BD%8F%E7%94%A8%E5%9C%B0%E9%9D%A2%E7%A7%AF%09%20%2028.0~38.0%09%20%20%20%20%20%20%20%20%20%20%20%20%20%20%20%20%20%20%20%20%20%20%20%20%20%20%20%20%2023.0~36.0%3C/span%3E" _note="" _mubu_note=""/>
          <outline text="规划人均公共管理与公共服务设施用地面积不应小于5.5m2/人。" _mubu_text="%3Cspan%20class=%22%20text-color-blue%22%3E%E8%A7%84%E5%88%92%E4%BA%BA%E5%9D%87%E5%85%AC%E5%85%B1%E7%AE%A1%E7%90%86%E4%B8%8E%E5%85%AC%E5%85%B1%E6%9C%8D%E5%8A%A1%E8%AE%BE%E6%96%BD%E7%94%A8%E5%9C%B0%E9%9D%A2%E7%A7%AF%E4%B8%8D%E5%BA%94%E5%B0%8F%E4%BA%8E5.5m2/%E4%BA%BA%E3%80%82%3C/span%3E" _note="" _mubu_note=""/>
          <outline text="规划人均道路与交通设施用地面积不应小于12.0m2/人。" _mubu_text="%3Cspan%20class=%22%20text-color-blue%22%3E%E8%A7%84%E5%88%92%E4%BA%BA%E5%9D%87%E9%81%93%E8%B7%AF%E4%B8%8E%E4%BA%A4%E9%80%9A%E8%AE%BE%E6%96%BD%E7%94%A8%E5%9C%B0%E9%9D%A2%E7%A7%AF%E4%B8%8D%E5%BA%94%E5%B0%8F%E4%BA%8E12.0m2/%E4%BA%BA%E3%80%82%3C/span%3E" _note="" _mubu_note=""/>
