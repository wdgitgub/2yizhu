    <outline text="增补城市31座（2001~2016年）：" _mubu_text="%3Cspan%3E%E5%A2%9E%E8%A1%A5%E5%9F%8E%E5%B8%8231%E5%BA%A7%EF%BC%882001~2016%E5%B9%B4%EF%BC%89%EF%BC%9A%3C/span%3E" _note="" _mubu_note="">
      <outline text="山海关区、凤凰县、濮阳市、安庆市、泰安市、海口市、金华市、绩溪县、吐鲁番市、特克斯县、" _mubu_text="%3Cspan%3E%E5%B1%B1%E6%B5%B7%E5%85%B3%E5%8C%BA%E3%80%81%E5%87%A4%E5%87%B0%E5%8E%BF%E3%80%81%E6%BF%AE%E9%98%B3%E5%B8%82%E3%80%81%E5%AE%89%E5%BA%86%E5%B8%82%E3%80%81%E6%B3%B0%E5%AE%89%E5%B8%82%E3%80%81%E6%B5%B7%E5%8F%A3%E5%B8%82%E3%80%81%E9%87%91%E5%8D%8E%E5%B8%82%E3%80%81%E7%BB%A9%E6%BA%AA%E5%8E%BF%E3%80%81%E5%90%90%E9%B2%81%E7%95%AA%E5%B8%82%E3%80%81%E7%89%B9%E5%85%8B%E6%96%AF%E5%8E%BF%E3%80%81%3C/span%3E" _note="" _mubu_note=""/>
      <outline text="无锡市、南通市、北海市、宜兴市、嘉兴市、太原市、中山市、蓬莱市、会理县、库车县、伊宁市、" _mubu_text="%3Cspan%3E%E6%97%A0%E9%94%A1%E5%B8%82%E3%80%81%E5%8D%97%E9%80%9A%E5%B8%82%E3%80%81%E5%8C%97%E6%B5%B7%E5%B8%82%E3%80%81%E5%AE%9C%E5%85%B4%E5%B8%82%E3%80%81%E5%98%89%E5%85%B4%E5%B8%82%E3%80%81%E5%A4%AA%E5%8E%9F%E5%B8%82%E3%80%81%E4%B8%AD%E5%B1%B1%E5%B8%82%E3%80%81%E8%93%AC%E8%8E%B1%E5%B8%82%E3%80%81%E4%BC%9A%E7%90%86%E5%8E%BF%E3%80%81%E5%BA%93%E8%BD%A6%E5%8E%BF%E3%80%81%E4%BC%8A%E5%AE%81%E5%B8%82%E3%80%81%3C/span%3E" _note="" _mubu_note=""/>
      <outline text="泰州市、会泽县、烟台市、青州市、湖州市、齐齐哈尔市、常州市、瑞金市、惠州市、温州市。" _mubu_text="%3Cspan%3E%E6%B3%B0%E5%B7%9E%E5%B8%82%E3%80%81%E4%BC%9A%E6%B3%BD%E5%8E%BF%E3%80%81%E7%83%9F%E5%8F%B0%E5%B8%82%E3%80%81%E9%9D%92%E5%B7%9E%E5%B8%82%E3%80%81%E6%B9%96%E5%B7%9E%E5%B8%82%E3%80%81%E9%BD%90%E9%BD%90%E5%93%88%E5%B0%94%E5%B8%82%E3%80%81%E5%B8%B8%E5%B7%9E%E5%B8%82%E3%80%81%E7%91%9E%E9%87%91%E5%B8%82%E3%80%81%E6%83%A0%E5%B7%9E%E5%B8%82%E3%80%81%E6%B8%A9%E5%B7%9E%E5%B8%82%E3%80%82%3C/span%3E" _note="" _mubu_note=""/>
    </outline>
    <outline text="截至2016年5月4日，国务院已将129座城市（琼山市已并入海口市，两者算一座城市）列为国家历史文化名城，并对这些城市的文化遗进行了重点保护。" _mubu_text="%3Cspan%3E%E6%88%AA%E8%87%B32016%E5%B9%B45%E6%9C%884%E6%97%A5%EF%BC%8C%E5%9B%BD%E5%8A%A1%E9%99%A2%E5%B7%B2%E5%B0%86129%E5%BA%A7%E5%9F%8E%E5%B8%82%EF%BC%88%E7%90%BC%E5%B1%B1%E5%B8%82%E5%B7%B2%E5%B9%B6%E5%85%A5%E6%B5%B7%E5%8F%A3%E5%B8%82%EF%BC%8C%E4%B8%A4%E8%80%85%E7%AE%97%E4%B8%80%E5%BA%A7%E5%9F%8E%E5%B8%82%EF%BC%89%E5%88%97%E4%B8%BA%E5%9B%BD%E5%AE%B6%E5%8E%86%E5%8F%B2%E6%96%87%E5%8C%96%E5%90%8D%E5%9F%8E%EF%BC%8C%E5%B9%B6%E5%AF%B9%E8%BF%99%E4%BA%9B%E5%9F%8E%E5%B8%82%E7%9A%84%E6%96%87%E5%8C%96%E9%81%97%E8%BF%9B%E8%A1%8C%E4%BA%86%E9%87%8D%E7%82%B9%E4%BF%9D%E6%8A%A4%E3%80%82%3C/span%3E" _note="" _mubu_note=""/>
