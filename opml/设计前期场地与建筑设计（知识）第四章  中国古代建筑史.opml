    <outline text="第三批历史文化名城，1994年公布，37个：" _mubu_text="%3Cspan%3E%E7%AC%AC%E4%B8%89%E6%89%B9%E5%8E%86%E5%8F%B2%E6%96%87%E5%8C%96%E5%90%8D%E5%9F%8E%EF%BC%8C1994%E5%B9%B4%E5%85%AC%E5%B8%83%EF%BC%8C37%E4%B8%AA%EF%BC%9A%3C/span%3E" _note="" _mubu_note="">
      <outline text="正定、邯郸、新绛、代县、祁县、哈尔滨、吉林、集安、衢州、临海、长汀、赣州、青岛、聊城、" _mubu_text="%3Cspan%3E%E6%AD%A3%E5%AE%9A%E3%80%81%E9%82%AF%E9%83%B8%E3%80%81%E6%96%B0%E7%BB%9B%E3%80%81%E4%BB%A3%E5%8E%BF%E3%80%81%E7%A5%81%E5%8E%BF%E3%80%81%E5%93%88%E5%B0%94%E6%BB%A8%E3%80%81%E5%90%89%E6%9E%97%E3%80%81%E9%9B%86%E5%AE%89%E3%80%81%E8%A1%A2%E5%B7%9E%E3%80%81%E4%B8%B4%E6%B5%B7%E3%80%81%E9%95%BF%E6%B1%80%E3%80%81%E8%B5%A3%E5%B7%9E%E3%80%81%E9%9D%92%E5%B2%9B%E3%80%81%E8%81%8A%E5%9F%8E%E3%80%81%3C/span%3E" _note="" _mubu_note=""/>
      <outline text="邹城、临淄、郑州、浚县、随州、钟祥、岳阳、肇庆、佛山、梅州、海康、柳州、琼山、乐山、" _mubu_text="%3Cspan%3E%E9%82%B9%E5%9F%8E%E3%80%81%E4%B8%B4%E6%B7%84%E3%80%81%E9%83%91%E5%B7%9E%E3%80%81%E6%B5%9A%E5%8E%BF%E3%80%81%E9%9A%8F%E5%B7%9E%E3%80%81%E9%92%9F%E7%A5%A5%E3%80%81%E5%B2%B3%E9%98%B3%E3%80%81%E8%82%87%E5%BA%86%E3%80%81%E4%BD%9B%E5%B1%B1%E3%80%81%E6%A2%85%E5%B7%9E%E3%80%81%E6%B5%B7%E5%BA%B7%E3%80%81%E6%9F%B3%E5%B7%9E%E3%80%81%E7%90%BC%E5%B1%B1%E3%80%81%E4%B9%90%E5%B1%B1%E3%80%81%3C/span%3E" _note="" _mubu_note=""/>
      <outline text="都江堰、泸州、建水、巍山、江孜、咸阳、汉中、天水、同仁。" _mubu_text="%3Cspan%3E%E9%83%BD%E6%B1%9F%E5%A0%B0%E3%80%81%E6%B3%B8%E5%B7%9E%E3%80%81%E5%BB%BA%E6%B0%B4%E3%80%81%E5%B7%8D%E5%B1%B1%E3%80%81%E6%B1%9F%E5%AD%9C%E3%80%81%E5%92%B8%E9%98%B3%E3%80%81%E6%B1%89%E4%B8%AD%E3%80%81%E5%A4%A9%E6%B0%B4%E3%80%81%E5%90%8C%E4%BB%81%E3%80%82%3C/span%3E" _note="" _mubu_note=""/>
