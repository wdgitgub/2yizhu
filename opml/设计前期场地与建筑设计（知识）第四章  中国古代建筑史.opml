      <outline text="长沙、广州、桂林、成都、遵义、昆明、大理、拉萨、西安、延安。" _mubu_text="%3Cspan%3E%E9%95%BF%E6%B2%99%E3%80%81%E5%B9%BF%E5%B7%9E%E3%80%81%E6%A1%82%E6%9E%97%E3%80%81%E6%88%90%E9%83%BD%E3%80%81%E9%81%B5%E4%B9%89%E3%80%81%E6%98%86%E6%98%8E%E3%80%81%E5%A4%A7%E7%90%86%E3%80%81%E6%8B%89%E8%90%A8%E3%80%81%E8%A5%BF%E5%AE%89%E3%80%81%E5%BB%B6%E5%AE%89%E3%80%82%3C/span%3E" _note="" _mubu_note=""/>
    </outline>
    <outline text="第二批历史文化名城，1986年公布，38个：" _mubu_text="%3Cspan%3E%E7%AC%AC%E4%BA%8C%E6%89%B9%E5%8E%86%E5%8F%B2%E6%96%87%E5%8C%96%E5%90%8D%E5%9F%8E%EF%BC%8C1986%E5%B9%B4%E5%85%AC%E5%B8%83%EF%BC%8C38%E4%B8%AA%EF%BC%9A%3C/span%3E" _note="" _mubu_note="">
